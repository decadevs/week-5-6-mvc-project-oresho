@model ResumePortal.Models.ViewModels.AddUserViewModel;

<h1>Update User</h1>

<form method="post" enctype="multipart/form-data">
    <div class="mt-3">
        <label class="form-label">Firstname</label>
        <input type="text" class="form-control" asp-for="Firstname" placeholder="@Model.Firstname"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Lastname</label>
        <input type="text" class="form-control" asp-for="Lastname" placeholder="@Model.Lastname" />
    </div>

    <div class="mt-3">
        <label class="form-label">Age</label>
        <input type="number" class="form-control" asp-for="Age" placeholder="@Model.Age" />
    </div>

    <div class="mt-3">
        <label class="form-label">Gender</label>
        <div class="form-check">
            <input asp-for="Gender" type="radio" class="form-check-input" id="maleRadio" name="Gender" value="M" placeholder="@Model.Gender">
            <label class="form-check-label" for="maleRadio">Male</label>
        </div>
        <div class="form-check">
            <input asp-for="Gender" type="radio" class="form-check-input" id="femaleRadio" name="Gender" value="F" placeholder="@Model.Gender">
            <label class="form-check-label" for="femaleRadio">Female</label>
        </div>
    </div>

    <div class="mt-3">
        <label class="form-label">Profile Photo</label>
        <input asp-for="PhotoUrl" type="file" class="form-control" name="PhotoUrl" accept="image/*">
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="@Model.Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">Phone Number</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="@Model.PhoneNumber" />
    </div>

    <div class="mt-3">
        <label class="form-label">Occupation</label>
        <input type="text" class="form-control" asp-for="Job" placeholder="@Model.Job" />
    </div>

    <div class="mt-3">
        <label class="form-label">Summary</label>
        <input type="text" class="form-control" asp-for="Summary" placeholder="@Model.Firstname" />
    </div>

    <div class="mt-3">
        <label class="form-label">Street</label>
        <input type="text" class="form-control" asp-for="Street" placeholder="@Model.Street" />
    </div>

    <div class="mt-3">
        <label class="form-label">City</label>
        <input type="text" class="form-control" asp-for="City" placeholder="@Model.City" />
    </div>

    <div class="mt-3">
        <label class="form-label">State</label>
        <input type="text" class="form-control" asp-for="State" placeholder="@Model.State" />
    </div>

    <div class="mt-3">
        <label class="form-label">Country</label>
        <input type="text" class="form-control" asp-for="Country" placeholder="@Model.Country" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>