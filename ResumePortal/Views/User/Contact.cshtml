@model bool

<div class="mt-3 card border-0">
    <h1 class="card-header">Send me an Email</h1>
    <form id="emailForm" action="Contact" method="post">
        <textarea id="emailText" class="w-100 card-body" style="border:none;" rows="10" cols="100%" placeholder="Any questions or inquiries?"></textarea>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#emailForm').submit(function (event) {
            // Prevent default form submission
            event.preventDefault();

            // Get the text from the textarea
            var emailText = $('#emailText').val();

            // Send the data to the action using AJAX
            $.ajax({
                url: $(this).attr('action'),
                method: $(this).attr('method'),
                data: { emailText: emailText }, // Adjust this according to your action's parameter name
                success: function (response) {
                    // Handle success response if needed
                    console.log(response);
                    // Check if the email was sent successfully
                    if (response) {
                        alert('Email sent successfully!');
                    } else {
                        alert('Failed to send email. Please try again.');
                    }
                },
                error: function (xhr, status, error) {
                    // Handle error if needed
                    console.error(error);
                }
            });
        });
    });
</script>
