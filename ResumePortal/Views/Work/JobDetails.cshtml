@model WorkHistoryViewModel;
<div class="card">
    <div class="mt-3">
        <h2 class="card-header">Company Name: @Model.CompanyName</h2>
    </div>

    <div class="mt-3">
        <h3 class="card-body">Job Title: @Model.JobTitle</h3>
    </div>

    <div class="mt-3">
        <h3 class="card-body">Job Description: @Model.JobDescription</h3>
    </div>

    <div class="mt-3">
        <h3 class="card-body">Start Date: @Model.StartDate</p>
    </div>

    @{
        if (Model.EndDate == null)
        {
        }
        else
        {
            <div class="mt-3">
                <h3 class="card-body">End Date: @Model.EndDate</h3>
            </div>
        }
    }

    <div class="mt-3">
        <h3 class="card-body">Address: @Model.Street, @Model.City, @Model.State, @Model.Country</h3>
    </div>
</div>
<div class="actions">
    <a class="btn btn-primary mt-3" asp-action="update" asp-controller="Work" asp-route-id="@Model.Id">Update</a>
    <a class="btn btn-danger mt-3" asp-action="delete" asp-controller="Work" asp-route-id="@Model.Id">Delete</a>
</div>
