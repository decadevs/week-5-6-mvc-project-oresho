@{
    ViewData["Title"] = "Home Page";
}

@model UserViewModel;

<div class="main-view d-flex flex-row flex-wrap">
    <div class="left-part flex-grow-1 w-25">
        <h3>Hello I'm</h3>
        <h1>@Model.Name</h1>
        <h2>Professional @Model.Job</h2>
        <p>I am a @Model.Age year old living in @Model.State, @Model.Country .</p>
        <p>@Model.Summary</p>
    </div>
    <div id="right-part" class="flex-grow-1">
        <a asp-action="Update" asp-controller="User">
            <img src="@Model.PhotoUrl" alt="Ore's Image" asp-append-version="true" />      
        </a>
    </div>
</div>