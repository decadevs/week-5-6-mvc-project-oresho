@model LoginViewModel
<h1>Login Page</h1>
<form asp-action="Login" asp-controller="Account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="Email" class="control-label"></label>
        <input type="text" name="Email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Password" class="control-label"></label>
        <input type="password" name="Password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <div class="row">
        <div class="col-7">
            <a asp-action="Register" asp-controller="Account" class="text-decoration-none float-start mt-2">Don't have account?</a>
        </div>
        <div class="col-4 mt-2">
            <input type="submit" value="Login" class="btn btn-primary btn-sm float-end" />
        </div>
        <div class="col-1">
            <a asp-action="ForgotPassword" asp-controller="Account" class="text-decoration-none float-end mt-2">Forgot Password?</a>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}